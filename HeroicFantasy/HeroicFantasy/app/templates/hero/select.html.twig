{# filepath: templates/hero/select.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Sélectionner un Héros
{% endblock %}

{% block body %}
	<h1>Sélectionner un Héros</h1>

	<div>
		<ul>
			{% for hero in heroes %}
				<li>
					{{ hero.name }}
					({{ hero.class }}) - Niveau
					{{ hero.level }}
					<a href="{{ path('set_active_hero', {id: hero.id}) }}" class="btn btn-primary">Sélectionner</a>
				</li>
			{% endfor %}
		</ul>
	</div>

{% endblock %}
