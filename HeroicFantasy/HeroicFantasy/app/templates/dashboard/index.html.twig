{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Bienvenue sur votre Dashboard</h1>

		{% if heroes is empty %}
			<div class="alert alert-warning">
				Vous n'avez encore aucun héros !
				<a href="{{ path('hero_create') }}" class="btn btn-primary">Créer un héros</a>
			</div>
		{% else %}
			<h2>Vos Héros</h2>
			<ul>
				{% for hero in heroes %}
					<li>
						{{ hero.name }}
						({{ hero.class }}) - Niveau
						{{ hero.level }}
						<a href="{{ path('hero_select', {'id': hero.id}) }}" class="btn btn-secondary">Sélectionner</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
{% endblock %}
